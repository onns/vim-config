{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "args": ["-remote=unix;/tmp/gopls-daemon-socket"],
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    }
  },
  "go.goplsArgs": ["-remote", "unix;/tmp/gopls-daemon-socket"],
  "suggest.noselect": true,
  "coc.preferences.diagnostic.displayByAle": true,
  "suggest.floatEnable": false
}
